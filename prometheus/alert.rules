groups:
- name: aptos
  rules:
  - alert: AptosDown
    expr: up{job="aptos"} == 0
    for: 3m
    annotations:
      title: 'Instance {{ $labels.instance }} down'
      description: '{{ $labels.job }} on {{ $labels.instance }} has been down for more than 3 minutes'
    labels:
      severity: 'critical'
  - alert: AptosNodeDown
    expr: avg by(instance) (increase(aptos_state_sync_version{chain="mainnet", type="synced"}[1m])) < 1
    for: 1m
    labels:
      severity: critical
      job: aptos
    annotations:
      summary: "Aptos Node Down"
      description: "Service {{ $labels.instance }} is not syncing."
  - alert: AptosInstanceDown
    expr: up{job="aptos"} == 0
    for: 1m
    labels:
      severity: critical
      job: aptos
    annotations:
      title: 'Instance {{ $labels.instance }} down'
      description: '{{ $labels.job }} on {{ $labels.instance }} has been down for more than 3 minutes'
  - alert: AptosValidatorDown
    expr: avg (increase(aptos_state_sync_version{chain="mainnet"}[1m])) < 1
    for: 1m
    labels:
      severity: critical
      job: aptos
    annotations:
      summary: "Aptos Validator Down"
      description: "Service {{ $labels.instance }} is not syncing."
  - alert: AptosVFNDown
    expr: avg(increase(aptos_state_sync_version{chain="mainnet"}[1m])) < 1
    for: 1m
    labels:
      severity: warning
      job: aptos
    annotations:
      summary: "Aptos VFN Down"
      description: "Service {{ $labels.instance }} is not syncing."
  - alert: AptosBackupDown
    expr: avg(increase(aptos_state_sync_version{chain="mainnet"}[1m])) < 1
    for: 1m
    labels:
      severity: warning
      job: aptos
    annotations:
      summary: "Aptos VFN Down"
      description: "Service {{ $labels.instance }} is not syncing."
